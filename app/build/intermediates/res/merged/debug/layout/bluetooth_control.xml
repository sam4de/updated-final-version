<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testble.MainActivity" >


    <Switch
        android:text="Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onOffSwitch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onOffSwitch"
        android:layout_toStartOf="@+id/onOffSwitch"
        android:layout_marginTop="48dp"
        android:id="@+id/cChord" />

    <Button
        android:text="D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cChord"
        android:layout_toEndOf="@+id/cChord"
        android:layout_marginStart="22dp"
        android:id="@+id/dChord" />

    <Button
        android:text="E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dChord"
        android:layout_toEndOf="@+id/dChord"
        android:layout_marginStart="20dp"
        android:id="@+id/eChord" />

    <Button
        android:text="F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cChord"
        android:layout_toStartOf="@+id/dChord"
        android:layout_marginTop="35dp"
        android:id="@+id/fChord" />

    <Button
        android:text="G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fChord"
        android:layout_alignStart="@+id/dChord"
        android:id="@+id/gChord" />

    <Button
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gChord"
        android:layout_alignStart="@+id/eChord"
        android:id="@+id/aChord" />

    <Button
        android:text="B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/aChord"
        android:layout_toEndOf="@+id/aChord"
        android:id="@+id/bChord" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:id="@+id/metro"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:max="1000" />

</RelativeLayout >
